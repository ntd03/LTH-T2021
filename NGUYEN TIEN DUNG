namespace BT5
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Nhap Ä‘iem trung binh cua hoc sinh: ");
            double diemTrungBinh = Convert.ToDouble(Console.ReadLine());
            string xepLoai = XepLoaiHocSinh(diemTrungBinh);
            Console.WriteLine($"Hoc sinh duoc xep loai: {xepLoai}");

            Console.ReadLine();
        }
        static string XepLoaiHocSinh(double diemTrungBinh)
        {
            if (diemTrungBinh >= 9.0)
            {
                return "Xuat sac";
            }
            else if (diemTrungBinh >= 8.0)
            {
                return "Gioi";
            }
            else if (diemTrungBinh >= 6.5)
            {
                return "Kha";
            }
            else if (diemTrungBinh >= 5.0)
            {
                return "Trung binh";
            }
            else if (diemTrungBinh >= 3.5)
            {
                return "Yeu";
            }
            else
            {
                return "Kem";
            }
        }
    }
}
